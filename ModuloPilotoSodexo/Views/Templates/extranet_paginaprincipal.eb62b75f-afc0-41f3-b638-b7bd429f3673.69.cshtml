<script type="text/javascript">
  
 
  
  	 //inicializa el formulario
    $(function(){
		limpiarForm=function(){
        	$("#frmLogin .field-validation-error span").remove();
            $("#frmLogin :text, #frmLogin :password").val("");  
  		};
                      
        $("#btnRegistro").click(function(){
            objRegistro=$("#frmRegistro")
            objRegistro.find("input:text").val("");
            $("#frmRegistro :submit").removeAttr("disabled");

            objRegistro.dialog("open");

            return false;
        });
        $("#btnOlvido").click(function(){
            $("#frmOlvido input:text").val("");
            $("#frmOlvido :submit").removeAttr("disabled");
			$("#frmOlvido :button").attr("style","display:block;position:relative;left:10px")
            limpiarForm();

            $("#frmLogin").hide();
            $("#frmOlvido").show();
            return false;
        });
    });   
   
</script>
  
